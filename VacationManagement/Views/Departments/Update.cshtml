@model VacationManagement.ViewModels.DepartmentsViewModel
@{
    ViewData["Title"] = "Update";
}

<h4>Update Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <input type="hidden" name="DomainModel.Id" value="@Model.DomainModel.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="DomainModel.Id" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="DomainModel.Name" class="control-label"></label>
                <input asp-for="DomainModel.Name" class="form-control" />
                <span asp-validation-for="DomainModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DomainModel.Description" class="control-label"></label>
                <input asp-for="DomainModel.Description" class="form-control" />
                <span asp-validation-for="DomainModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}