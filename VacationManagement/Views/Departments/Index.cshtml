@model VacationManagement.ViewModels.DepartmentsViewModel

@{
    ViewData["Title"] = "Departments";
}
<div class="row">
    <div class="col-md-12">
        <h2>Departments</h2>

        <p>
            <a href="@Url.Action("Create","Departments")" class="btn btn-info">Create New</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DomainModel.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DomainModel.Description)
                    </th>

                    <th>Events</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DomainList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.ActionLink("Update", "Update", new {  id=item.Id  }) |
                          @*   @Html.ActionLink("Details", "Details", new {  id=item.Id  }) | *@
                            @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>