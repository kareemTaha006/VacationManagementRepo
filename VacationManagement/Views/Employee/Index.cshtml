@model VacationManagement.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Employees";
}
<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DomainModel.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DomainModel.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DomainModel.VacationBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DomainModel.DepartmentId)
            </th>

            <th>Events</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DomainList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VacationBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Update", new {  id=item.Id  },htmlAttributes:new {@class="btn btn-info"}) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id  },htmlAttributes:new {@class="btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>